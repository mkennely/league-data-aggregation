{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 7
  },
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "no-console": ["error", { "allow": ["log", "warn", "error"] }],
    "quotes": ["error", "single"],
    "max-len": [1, 120, 2],
    "linebreak-style": [
      "error",
      "windows"
    ]
  }
}
